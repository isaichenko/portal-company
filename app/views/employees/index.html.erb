<h2>Именинники в этом месяце</h2>

<table class="table color-white">
  <thead>
    <tr>
      <th scope="col">ФИО</th>
      <th scope="col">Дата рождения</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.last_name %> <%= result.first_name %> <%= result.patronymic %></td>
        <td><%= result.birthday %></td>
      </tr>
    <% end %>
  </tbody>
</table>
