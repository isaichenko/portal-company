<%# if false %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <!--<img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">-->
  <%= image_tag "logo_round.png", class: "mb-4", width: "72", height: "72" %>
  <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>

  <label for="inputEmail" class="sr-only">Логин</label>
  <%#= f.label :email %>
  <%= f.text_field :email, placeholder: "Логин", autofocus: true, class: 'form-control' %>

  <label for="inputPassword" class="sr-only">Пароль</label>
  <%#= f.label :password, "Пароль" %>
  <%= f.password_field :password, placeholder: "Пароль", class: 'form-control' %>


  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
        <!--<input type="checkbox" value="remember-me"> Remember me-->
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Запомнить" %>
    </div>
    <!--<div class="form-group mb-0">
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me, "Запомнить" %>
    </div>-->
  <% end %>

  <%= f.submit "Войти", class: "btn btn-lg btn-success btn-block" %>
  <p class="mt-5 mb-3 text-muted">&copy; 2020</p>
<% end %>

<%# end %>

