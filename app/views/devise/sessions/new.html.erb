<h2>Логин администратора</h2>

<div class="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control bg-dark' %>
    </div>

    <div class="form-group bg-dark">
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, class: 'form-control bg-dark' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Запомнить" %>
      </div>
    <% end %>

    <div class="form-group" align="right">
      <%= f.submit "Войти", class: "btn btn-danger" %>
    </div>
  <% end %>
</div>

